<% if flash[:notice] || flash[:alert] %>
  <div class="flash-message-bg">
    <div class="flash-message-inner">
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>
    </div>
  </div>
<% end %>
