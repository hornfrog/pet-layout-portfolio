<main class="login-form-wrapper mx-auto" style="max-width: 500px; padding-top: 100px;">

<h1 class="page-title mb-4 fs-2">ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <label class="form-label fw-bold" for="user_email">メールアドレス</label>
      <span class="text-danger small ms-2">必須</span>
      <%= f.email_field :email, class: "form-control", id: "user_email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <label class="form-label fw-bold" for="user_password">パスワード</label>
      <span class="text-danger small ms-2">必須</span>
      <%= f.password_field :password, class: "form-control", id: "user_password", autocomplete: "current-password" %>
      <div class="form-text">半角英数字</div>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <div class="d-grid">
      <%= f.submit "ログインする", class: "btn btn-success py-2 rounded-pill fw-bold" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>

</main>

